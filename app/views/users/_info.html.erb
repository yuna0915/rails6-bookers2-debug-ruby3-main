<table class='table'>
  <tr>
    <td><%= image_tag user.get_profile_image, size: '100x100' %></td>
  </tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
  <tr>
    <th>follows</th>
    <td><%= link_to user.followings.count, followings_user_path(user) %></td>
  </tr>
  <tr>
    <th>followers</th>
    <td><%= link_to user.followers.count, followers_user_path(user) %></td>
  </tr>
</table>

<% if current_user == user %>
  <div class='row'>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<% end %>


<div class='row mt-3'>
  <% if current_user != user %>  <!-- ログインユーザーと表示するユーザーが異なる場合に表示 -->
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: 'btn btn-success' %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-info' %>
    <% end %>
  <% end %>
</div>
