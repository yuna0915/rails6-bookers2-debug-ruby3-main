<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th ></th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
      <% books.each do |book| %>
      <tr>
        <td>  <%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'80x80' %>
          <% end %>
        </td>
        <td><%= link_to book.title ,book_path(book.id) %></td>
        <td><%= book.body%></td>
        <td> <p><%= "コメント数: #{book.book_comments.count} " %></td>    
      </tr>
    <% end %>
  </tbody>
</table> 